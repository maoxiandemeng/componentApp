<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--透明渐变的TabView-->
    <declare-styleable name="AlphaTabView">
        <attr name="tabIconNormal" format="reference" />
        <attr name="tabIconSelected" format="reference" />
        <attr name="tabText" format="string" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="textColorNormal" format="color" />
        <attr name="textColorSelected" format="color" />
        <attr name="badgeBackgroundColor" format="color" />
    </declare-styleable>

    <!-- 刷新 -->
    <declare-styleable name="SwipeToLoadLayout">
        <attr name="refresh_enabled" format="boolean" />
        <attr name="load_more_enabled" format="boolean" />

        <attr name="swipe_style" format="enum">
            <enum name="classic" value="0" />
            <enum name="above" value="1" />
            <enum name="blew" value="2" />
            <enum name="scale" value="3" />
        </attr>

        <attr name="drag_ratio" format="float" />

        <attr name="refresh_trigger_offset" format="dimension" />
        <attr name="load_more_trigger_offset" format="dimension" />
        <attr name="refresh_final_drag_offset" format="dimension" />
        <attr name="load_more_final_drag_offset" format="dimension" />

        <attr name="swiping_to_refresh_to_default_scrolling_duration" format="integer" />
        <attr name="release_to_refreshing_scrolling_duration" format="integer" />
        <attr name="refresh_complete_delay_duration" format="integer" />
        <attr name="refresh_complete_to_default_scrolling_duration" format="integer" />
        <attr name="default_to_refreshing_scrolling_duration" format="integer" />
        <attr name="swiping_to_load_more_to_default_scrolling_duration" format="integer" />
        <attr name="release_to_loading_more_scrolling_duration" format="integer" />
        <attr name="load_more_complete_delay_duration" format="integer" />
        <attr name="load_more_complete_to_default_scrolling_duration" format="integer" />
        <attr name="default_to_loading_more_scrolling_duration" format="integer" />
    </declare-styleable>

    <!--循环滑动的ViewPager-->
    <declare-styleable name="LoopViewPager">
        <attr name="isAutoLoop" format="boolean"/>
        <attr name="delayTime" format="integer"/>
    </declare-styleable>
    <!--方形指示器-->
    <declare-styleable name="RectIndicator">
        <attr name="ri_rectWidth" format="dimension"/>
        <attr name="ri_rectHeight" format="dimension"/>
        <attr name="ri_normalColor" format="color"/>
        <attr name="ri_selectedColor" format="color"/>
        <attr name="ri_dotPadding" format="dimension"/>
        <attr name="ri_isStroke" format="boolean"/>
        <attr name="ri_normalStrokeWidth" format="dimension"/>
        <attr name="ri_isBlink" format="boolean"/>
    </declare-styleable>
    <!--圆形指示器-->
    <declare-styleable name="CircleIndicator">
        <attr name="ci_normalRadius" format="dimension"/>
        <attr name="ci_normalRadiusColor" format="color"/>
        <attr name="ci_selectedRadius" format="dimension"/>
        <attr name="ci_selectedRadiusColor" format="color"/>
        <attr name="ci_dotPadding" format="dimension"/>
        <attr name="ci_isStroke" format="boolean"/>
        <attr name="ci_normalStrokeWidth" format="dimension"/>
        <attr name="ci_isBlink" format="boolean"/>
    </declare-styleable>

    <!--刷新头-->
    <declare-styleable name="MaterialHeader">
        <attr name="mhPrimaryColor" format="color" />
        <attr name="mhShadowColor" format="color" />
        <attr name="mhShadowRadius" format="dimension"/>
        <attr name="mhShowBezierWave" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="StateTextView">
        <attr name="background_normal" format="color"/>
        <attr name="background_press" format="color"/>
        <attr name="conner_radius" format="dimension"/>
        <attr name="left_top_radius" format="dimension"/>
        <attr name="left_bottom_radius" format="dimension"/>
        <attr name="right_top_radius" format="dimension"/>
        <attr name="right_bottom_radius" format="dimension"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color_normal" format="color"/>
        <attr name="border_color_press" format="color"/>
        <attr name="dash_width" format="dimension"/>
        <attr name="dash_gap" format="dimension"/>
        <attr name="text_color_normal" format="color"/>
        <attr name="text_color_press" format="color"/>
        <attr name="icon_normal" format="reference"/>
        <attr name="icon_press" format="reference"/>
        <attr name="icon_direction">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="mode" format="enum">
            <enum name="press" value="1"/>
            <enum name="select" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SelectImageView">
        <attr name="unable_img" format="reference"/>
        <attr name="normal_img" format="reference"/>
        <attr name="selected_img" format="reference"/>
    </declare-styleable>
</resources>