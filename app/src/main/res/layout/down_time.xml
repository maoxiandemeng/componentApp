<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_hour"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:background="#999999"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/maohao1"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/tv_hour"
        android:gravity="center_vertical"
        android:text=":"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_minute"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:layout_toRightOf="@+id/maohao1"
        android:background="#999999"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/maohao2"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/tv_minute"
        android:gravity="center_vertical"
        android:text=":"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_second"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:layout_toRightOf="@+id/maohao2"
        android:background="#999999"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />


    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hour"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="时"
        android:textColor="#999999"
        android:textSize="10sp" />

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_minute"
        android:layout_below="@+id/tv_minute"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="分"
        android:textColor="#999999"
        android:textSize="10sp" />

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_second"
        android:layout_below="@+id/tv_second"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="秒"
        android:textColor="#999999"
        android:textSize="10sp" />

</RelativeLayout>